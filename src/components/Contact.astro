---
import { Mail, MapPin, Linkedin, Github } from "lucide-astro";
---

<section id="contact" class="py-20">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row">
      <div class="md:w-1/2 mb-10 md:mb-0">
        <h2 class="text-3xl font-bold text-gray-800 mb-6">Contact Us</h2>
        <p class="text-gray-600 mb-8">
          We're here to help you transform your technology infrastructure.
          Contact us and discover how we can boost your business.
        </p>

        <div class="space-y-6">
          <div class="flex items-start">
            <Mail class="h-6 w-6 text-indigo-600 mr-4 flex-shrink-0 mt-1" />
            <div>
              <h4 class="font-bold text-gray-800 mb-1">Email</h4>
              <p class="text-gray-600">contact@dyallab.com.ar</p>
            </div>
          </div>

          <div class="flex items-start">
            <MapPin class="h-6 w-6 text-indigo-600 mr-4 flex-shrink-0 mt-1" />
            <div>
              <h4 class="font-bold text-gray-800 mb-1">Location</h4>
              <p class="text-gray-600">Buenos Aires, Argentina</p>
            </div>
          </div>

          <div class="flex space-x-4 mt-8">
            <a
              href="https://www.linkedin.com/company/dyallab/"
              class="bg-gray-100 p-3 rounded-full hover:bg-gray-200 transition-colors"
            >
              <Linkedin class="h-5 w-5 text-gray-700" />
            </a>
            <a
              href="https://github.com/dyallab"
              class="bg-gray-100 p-3 rounded-full hover:bg-gray-200 transition-colors"
            >
              <Github class="h-5 w-5 text-gray-700" />
            </a>
          </div>
        </div>
      </div>

      <div class="md:w-1/2 md:pl-12">
        <form class="bg-white p-8 rounded-lg shadow-md">
          <div class="mb-6">
            <label for="name" class="block text-gray-700 font-medium mb-2"
              >Name</label
            >
            <input
              type="text"
              id="name"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
              placeholder="Your name"
            />
          </div>

          <div class="mb-6">
            <label for="email" class="block text-gray-700 font-medium mb-2"
              >Email</label
            >
            <input
              type="email"
              id="email"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
              placeholder="contact@dyallab.com.ar"
            />
          </div>

          <div class="mb-6">
            <label for="subject" class="block text-gray-700 font-medium mb-2"
              >Subject</label
            >
            <input
              type="text"
              id="subject"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
              placeholder="How can we help you?"
            />
          </div>

          <div class="mb-6">
            <label for="message" class="block text-gray-700 font-medium mb-2"
              >Message</label
            >
            <textarea
              id="message"
              rows="4"
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
              placeholder="Tell us more about your project..."></textarea>
          </div>

          <button
            type="submit"
            class="w-full bg-indigo-600 text-white px-6 py-3 rounded-md font-medium hover:bg-indigo-700 transition-colors"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.querySelector("form");
  const name = document.getElementById("name").innerText;
  const email = document.getElementById("email").innerText;
  const subject = document.getElementById("subject").innerText;
  const message = document.getElementById("message").innerText;

  function sendEmail() {
    const mailtoLink = `mailto:contact@dyallab.com.ar?subject=${encodeURIComponent(
      subject,
    )}&body=${encodeURIComponent(
      `Name: ${name}\nEmail: ${email}\n\n${message}`,
    )}`;

    window.location.href = mailtoLink;
  }

  form.addEventListener("submit", (event) => {
    event.preventDefault();
    sendEmail();
  });
</script>
