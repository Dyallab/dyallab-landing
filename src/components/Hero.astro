---
import { ChevronRight, Sparkles } from "lucide-astro";
---

<section
  class="relative min-h-screen flex items-center justify-center overflow-hidden"
>
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    <img
      src="https://images.unsplash.com/photo-1451187580459-43490279c0fa?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80"
      alt="Technology Background"
      class="w-full h-full object-cover"
    />
    <div
      class="absolute inset-0 bg-gradient-to-br from-indigo-900/90 via-purple-900/85 to-indigo-800/90"
    >
    </div>
  </div>

  <!-- Animated background elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div
      class="absolute top-20 left-10 w-72 h-72 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob"
    >
    </div>
    <div
      class="absolute top-40 right-10 w-72 h-72 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-2000"
    >
    </div>
    <div
      class="absolute -bottom-8 left-1/2 w-72 h-72 bg-pink-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-4000"
    >
    </div>
  </div>

  <!-- Content -->
  <div class="container mx-auto px-4 relative z-10 py-32">
    <div class="max-w-5xl mx-auto text-center space-y-8">
      <!-- Badge -->
      <div
        class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm px-6 py-3 rounded-full border border-white/20 animate-fade-in"
      >
        <Sparkles class="h-5 w-5 text-purple-300" />
        <span class="text-sm md:text-base text-white font-medium"
          >Transforming Ideas into Reality</span
        >
      </div>

      <!-- Main Heading -->
      <h1
        class="text-5xl md:text-7xl lg:text-8xl font-extrabold leading-tight text-white"
      >
        Your growth,
        <span
          class="block bg-gradient-to-r from-cyan-400 via-blue-500 to-purple-500 bg-clip-text text-transparent mt-2"
        >
          engineered
        </span>
      </h1>

      <!-- Subtitle -->
      <p
        class="text-xl md:text-2xl lg:text-3xl text-gray-200 leading-relaxed max-w-3xl mx-auto"
      >
        The Proven Path to Scale. Software Solutions Rooted in Experience.
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center pt-8">
        <a
          href="#services"
          class="group bg-white text-indigo-900 px-8 py-4 rounded-xl font-bold hover:bg-gray-100 transition-all duration-300 flex items-center justify-center shadow-2xl hover:shadow-3xl hover:scale-105"
        >
          Explore Services
          <ChevronRight
            class="ml-2 h-5 w-5 group-hover:translate-x-1 transition-transform"
          />
        </a>
        <a
          href="https://calendly.com/dyallo/discovery-call"
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-transparent border-2 border-white/30 backdrop-blur-sm text-white px-8 py-4 rounded-xl font-bold hover:bg-white/10 hover:border-white transition-all duration-300 flex items-center justify-center"
        >
          Let's Talk
        </a>
      </div>

      <!-- Stats -->
      <div
        class="flex flex-wrap items-center justify-center gap-8 lg:gap-16 pt-16"
      >
        <div class="text-center">
          <p class="text-4xl md:text-5xl font-bold text-white mb-2">20+</p>
          <p class="text-gray-300 text-sm md:text-base">Completed Projects</p>
        </div>
        <div class="h-16 w-px bg-white/20 hidden sm:block"></div>
        <div class="h-16 w-px bg-white/20 hidden sm:block"></div>
        <div class="text-center">
          <p class="text-4xl md:text-5xl font-bold text-white mb-2">5+</p>
          <p class="text-gray-300 text-sm md:text-base">Years of Experience</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce">
    <div
      class="w-6 h-10 border-2 border-white/30 rounded-full flex items-start justify-center p-2"
    >
      <div class="w-1 h-2 bg-white/50 rounded-full animate-scroll"></div>
    </div>
  </div>
</section>

<style>
  @keyframes blob {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes scroll {
    0% {
      transform: translateY(0);
      opacity: 1;
    }
    100% {
      transform: translateY(12px);
      opacity: 0;
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }

  .animate-scroll {
    animation: scroll 1.5s ease-in-out infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>
