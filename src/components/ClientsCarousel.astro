---
interface Clients {
  name: string;
  image: string;
}
const clients = [
  { name: "Inti", image: "/images/inti.png" },
  { name: "IoT In Motion", image: "/images/iot.png" },
  { name: "UNLP", image: "/images/unlp.png" },
  {
    name: "Biblioteca Maria Adriana Casajus",
    image: "/images/maria-adriana-casajus.png",
  },
  {
    name: "Provincia ART",
    image: "/images/prov-art.png",
  },
] satisfies Clients[];
---

<section
  class="py-24 bg-gradient-to-br from-indigo-900 via-purple-900 to-indigo-800 relative overflow-hidden"
>
  <!-- Background decoration -->
  <div class="absolute inset-0 overflow-hidden">
    <div
      class="absolute top-1/3 left-1/4 w-96 h-96 bg-cyan-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob"
    >
    </div>
    <div
      class="absolute bottom-1/3 right-1/4 w-96 h-96 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-blob animation-delay-2000"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="text-center mb-16">
      <div
        class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm text-white px-4 py-2 rounded-full font-semibold text-sm mb-6 border border-white/20"
      >
        <span class="w-2 h-2 bg-cyan-400 rounded-full animate-pulse"></span>
        TRUSTED BY
      </div>

      <h2 class="text-4xl md:text-5xl font-extrabold text-white mb-4">
        Companies That <span
          class="bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent"
          >Trust Us</span
        >
      </h2>

      <p class="text-lg text-gray-200 max-w-2xl mx-auto">
        We're proud to work with these amazing organizations
      </p>
    </div>

    <!-- Clients Grid -->
    <div
      class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6 max-w-6xl mx-auto mb-16"
    >
      {
        clients.map((client) => (
          <div class="group bg-white/10 backdrop-blur-lg rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 border border-white/20 hover:bg-white/20 hover:-translate-y-2 flex items-center justify-center min-h-[140px]">
            <img
              src={client.image}
              alt={client.name}
              class="h-16 w-auto object-contain filter brightness-0 invert opacity-70 group-hover:opacity-100 transition-all duration-300 group-hover:scale-110"
            />
          </div>
        ))
      }
    </div>

    <!-- Trust Indicators -->
    <div class="flex flex-wrap justify-center gap-12 text-center">
      <div>
        <p class="text-4xl font-bold text-white mb-2">99%</p>
        <p class="text-gray-200 font-medium">Client Satisfaction</p>
      </div>
      <div class="h-16 w-px bg-white/20 hidden md:block"></div>
      <div>
        <p class="text-4xl font-bold text-white mb-2">24hs</p>
        <p class="text-gray-200 font-medium">Response Time</p>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes blob {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>
